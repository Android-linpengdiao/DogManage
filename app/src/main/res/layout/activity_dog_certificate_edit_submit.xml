<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.dog.manage.app.view.TitleView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/colorAppTheme"
            app:tv_content=""
            app:tv_content_size="@dimen/sp_14"
            app:tv_title="犬证办理"
            app:tv_title_bold="true"
            app:tv_title_size="@dimen/titleViewSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dogOwnerInfoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="犬主信息"
                android:textColor="@color/colorAppTheme"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dividerHeight"
                android:background="@color/colorAppTheme" />

            <TextView
                android:id="@+id/dogInfoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="犬只信息"
                android:textColor="@color/colorAppTheme"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dividerHeight"
                android:background="@color/colorAppTheme" />

            <TextView
                android:id="@+id/submitView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_theme"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="提交信息"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.dog.manage.app.view.ViewItemLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    app:item_container_height="@dimen/dp_48"
                    app:item_content="柴犬"
                    app:item_content_color="#333333"
                    app:item_content_size="@dimen/sp_14"
                    app:item_title="犬只品种"
                    app:item_title_size="@dimen/sp_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dividerHeight"
                    android:background="@color/colorDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="受理单位"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/dp_20"
                            android:layout_height="@dimen/dp_20"
                            android:src="@drawable/image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_12" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dividerHeight"
                    android:background="@color/colorDivider" />

                <com.dog.manage.app.view.ViewItemLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    app:item_container_height="@dimen/dp_48"
                    app:item_content="200"
                    app:item_content_color="@color/blue"
                    app:item_content_size="@dimen/sp_14"
                    app:item_title="办理费用"
                    app:item_title_size="@dimen/sp_16" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dividerHeight"
                    android:background="@color/colorDivider" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_16"
                    android:text="温馨提示:审核通过后,在我的-我的犬证中,完成支付即可。本次提交审核无需支付任何费用。 "
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/confirmView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/button_theme"
            android:gravity="center"
            android:onClick="onClickConfirm"
            android:text="提交审核"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
</layout>