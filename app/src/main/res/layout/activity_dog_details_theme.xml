<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_radius_top"
                android:orientation="vertical">

<!--                <com.xw.banner.Banner-->
<!--                    android:id="@+id/banner"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/dp_294"-->
<!--                    app:xw_banner_layout="@layout/banner_layout"-->
<!--                    app:xw_indicator_drawable_selected="@drawable/tab_b"-->
<!--                    app:xw_indicator_drawable_unselected="@drawable/tab_b_t50"-->
<!--                    app:xw_indicator_height="@dimen/dp_0"-->
<!--                    app:xw_indicator_width="@dimen/dp_0" />-->

                <ImageView
                    android:id="@+id/coverView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_294"
                    android:background="@drawable/button_radius_top"
                    android:visibility="visible"/>


                <com.dog.manage.app.view.TextBoldView
                    android:id="@+id/dogNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_18"
                    tools="柯基犬|白色|1岁2个月"
                    android:textColor="@color/colorAppTheme"
                    android:textSize="@dimen/sp_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_8"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/daohang"
                        app:tint="@color/colorAppTheme"/>

                    <TextView
                        android:id="@+id/leaveCenterView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="北京市公安局犬类留检所"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_8"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/dingwei_s" />

                    <TextView
                        android:id="@+id/centerAddressView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="北京市昌平区七里渠甲1号"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_8"
                        android:padding="@dimen/dp_2"
                        android:src="@drawable/dianhua" />

                    <TextView
                        android:id="@+id/phoneView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        tools:text="010-49384834"
                        android:textColor="@color/colorAppTheme"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@drawable/xinxi" />

                    <TextView
                        android:id="@+id/idNumView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="犬只编号："
                        android:textColor="@color/colorAppTheme"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@drawable/circle_gray"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/dogGenderView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="犬只性别："
                        android:textColor="@color/colorAppTheme"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@drawable/circle_gray"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/dogShapeView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="犬只体型："
                        android:textColor="@color/colorAppTheme"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@drawable/circle_gray"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/immuneStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="免疫情况："
                        android:textColor="@color/colorAppTheme"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_8"
                        android:background="@drawable/circle_gray"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/sterilizationView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="绝育情况："
                        android:textColor="@color/colorAppTheme"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_26"
                    android:paddingBottom="@dimen/dp_23">

                    <TextView
                        android:layout_width="@dimen/dp_140"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/button_red"
                        android:gravity="center"
                        android:onClick="onClickCancel"
                        android:text="取消"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="@dimen/dp_140"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:background="@drawable/button_theme"
                        android:gravity="center"
                        android:onClick="onClickConfirm"
                        android:text="申请领养"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>