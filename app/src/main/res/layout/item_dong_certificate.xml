<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/selectedView"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_14"
            android:background="@drawable/selected" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_14"
            android:background="@drawable/card"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_30"
            android:paddingTop="@dimen/dp_13"
            android:paddingRight="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_16">

            <com.dog.manage.app.view.TextBoldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="北京市养犬登记证"
                android:textColor="#000000"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14">

                <LinearLayout
                    android:id="@+id/certificateInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="犬证编号:"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="0100000 "
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/certificateMarginTop"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="犬只品种:"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="萨摩耶"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/certificateMarginTop"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="犬只毛色:"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="白色"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/certificateMarginTop"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="犬只性别:"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="雄性"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/certificateMarginTop"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="犬主姓名:"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="张三"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/certificateMarginTop"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="发证日期:"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="2021年3月31日"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/certificateMarginTop"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="居住住址:"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_8"
                            android:gravity="center_vertical"
                            android:text="北京市西城区天桥街道"
                            android:textColor="#000000"
                            android:textSize="@dimen/certificateSize" />

                    </LinearLayout>

                    <com.dog.manage.app.view.TextBoldView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="center"
                        android:text="北京市公安局统一监制"
                        android:textColor="#000000"
                        android:textSize="@dimen/sp_11"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/certificateCoverView"
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_78"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_40"
                    android:background="@drawable/image_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/certificateCoverView"
                    android:layout_alignStart="@+id/certificateCoverView"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center"
                    android:text="免疫证状态:有效"
                    android:textColor="#000000"
                    android:textSize="@dimen/certificateSize" />

                <ImageView
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_alignBottom="@+id/certificateInfoContainer"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/gongzhang" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</layout>