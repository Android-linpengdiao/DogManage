<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/ic_close_b"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/hintView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="登陆后即可查看\n测评结果/评论/收藏"
            android:textColor="#121212"
            android:textColorHint="#333333"
            android:textSize="24sp" />


        <RelativeLayout
            android:id="@+id/login_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="355dp"
            android:layout_marginRight="68dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="认证服务由创蓝253提供"
                android:textColor="#999999"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/switch_login"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="116dp"
                android:background="@drawable/button_radius_white"
                android:gravity="center"
                android:text="其他手机号登陆"
                android:textColor="#333333"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>