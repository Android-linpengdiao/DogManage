<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/ic_close_b"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/hintView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="118dp"
            android:src="@drawable/icon_login" />

        <TextView
            android:id="@+id/switch_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="462dp"
            android:gravity="center"
            android:text="其他登录方式"
            android:textColor="#273154"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="85dp"
            android:layout_height="@dimen/dividerHeight"
            android:layout_below="@+id/switch_login"
            android:layout_centerHorizontal="true"
            android:background="#273154" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:paddingBottom="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="未注册的手机号登录后自动注册"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

</RelativeLayout>